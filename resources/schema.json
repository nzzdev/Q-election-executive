{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Exekutivwahlen",
  "properties": {
    "title": {
      "title": "Titel",
      "type": "string"
    },
    "subtitle": {
      "title": "Untertitel",
      "type": "string"
    },
    "majority": {
      "title": "Absolutes Mehr",
      "type": "number"
    },
    "isPercentage": {
      "title": "Anzahl Stimmen in % anzeigen",
      "type": "boolean"
    },
    "candidates": {
      "title": "Kandidaten",
      "type": "array",
      "Q:options": {
        "expandable": {
          "itemLabelProperty": "name"
        }
      },
      "items": {
        "type": "object",
        "title": "Kandidat",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string"
          },
          "party": {
            "title": "Parteiname (Kürzel)",
            "type": "string"
          },
          "isPrevious": {
            "title": "aktuell in der Regierung",
            "type": "boolean"
          },
          "votes": {
            "title": "Anzahl Stimmen",
            "type": "number",
            "Q:options": {
              "step": "0.01"
            }
          },
          "status": {
            "type": "string",
            "title": "Status",
            "default": "undefined",
            "enum": [
              "undefined",
              "elected",
              "not elected"
            ],
            "Q:options": {
              "enum_titles": [
                "offen",
                "gewählt",
                "nicht gewählt"
              ]
            }
          },
          "color": {
            "title": "Farbe",
            "type": "object",
            "Q:options": {
              "compact": true
            },
            "properties": {
              "full": {
                "title": "gewählt",
                "type": "object",
                "Q:options": {
                  "compact": true
                },
                "properties": {
                  "colorCode": {
                    "title": "Farbcode",
                    "type": "string",
                    "Q:type": "color"
                  },
                  "classAttribute": {
                    "title": "CSS Klassenname",
                    "type": "string"
                  }
                }
              },
              "light": {
                "title": "nicht gewählt",
                "type": "object",
                "Q:options": {
                  "compact": true
                },
                "properties": {
                  "colorCode": {
                    "title": "Farbcode",
                    "type": "string",
                    "Q:type": "color"
                  },
                  "classAttribute": {
                    "title": "CSS Klassenname",
                    "type": "string"
                  }
                }
              }
            }
          },
          "image": {
            "title": "Bild",
            "type": "object",
            "Q:options": {
              "compact": true
            },
            "properties": {
              "base64": {
                "title": "Bild auswählen",
                "type": "string",
                "Q:type": "base64image"
              }
            }
          }
        },
        "required": [
          "name"
        ]
      }
    },
    "notes": {
      "title": "Bemerkungen",
      "type": "string"
    },
    "sources": {
      "title": "Quellen",
      "type": "array",
      "items": {
        "type": "object",
        "title": "Quelle",
        "properties": {
          "text": {
            "title": "Text",
            "type": "string"
          },
          "link": {
            "Q:type": "link",
            "title": "Link",
            "type": "object",
            "properties": {
              "url": {
                "title": "Url",
                "type": "string"
              },
              "isValid": {
                "type": "boolean"
              }    
            }
          }
        }
      }
    }
  },
  "required": [
    "title"
  ]
}
