          },
          "votes": {
            "title": "Anzahl Stimmen",
            "type": "number"
          },
          "status": {
            "oneOf": [
              {
                "title": "gew채hlt", 
                "enum": ["elected"] 
              },
              {
                "title": "nicht gew채hlt", 
                "enum": ["not elected"] 
              },
              {
                "title": "offen", 
                "enum": ["undefined"] 
              }
            ]
          },
          "color": {
            "title": "Farbe",
            "type": "object",
