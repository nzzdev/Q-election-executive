{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Exekutivwahlen",
  "properties": {
    "title": {
      "title": "Titel",
      "type": "string",
      "Q:options": {
        "placeholder": "Der Titel bringt die Kernaussage der Grafik auf den Punkt, zB&#46; 'Der Stadtrat bleibt links'&#46;"
      }
    },
    "subtitle": {
      "title": "Untertitel",
      "type": "string",
      "Q:options": {
        "placeholder": "Der Untertitel benennt präzise, um welche Wahl (und ggf&#46; welchen Wahlgang) es sich handelt&#46;"
      }
    },
    "majority": {
      "title": "Absolutes Mehr",
      "type": "number",
      "Q:options": {
        "placeholder": "Nur eintragen, sofern für den Ausgang der Wahl relevant&#46;"
      }
    },
    "isPercentage": {
      "title": "Stimmen liegen in % anstatt absoluten Zahlen vor",
      "type": "boolean"
    },
    "availableSeats": {
      "title": "Verfügbare Sitze",
      "type": "number"
    },
    "withErrorMargin": {
      "title": "Daten mit Fehlermarge",
      "type": "boolean"
    },
    "errorMarginLabels": {
      "title": "Beschriftung der Legende",
      "type": "object",
      "properties": {
        "bestGuessLabel": {
          "title": "Beschriftung des besten Werts in der Legende",
          "type": "string",
          "default": "Hochrechnung"
        },
        "errorMarginLabel": {
          "title": "Beschriftung der Fehlermarge",
          "type": "string",
          "default": "Fehlermarge"
        }
      },
      "Q:options": {
        "availabilityChecks": [
          {
            "type": "ToolEndpoint",
            "config": {
              "endpoint": "availability/errorMargin",
              "fields": ["withErrorMargin"]
            }
          }
        ]
      }
    },
    "candidates": {
      "title": "KandidatInnen",
      "type": "array",
      "Q:options": {
        "expandable": {
          "itemLabelProperty": "name"
        }
      },
      "items": {
        "type": "object",
        "title": "KandidatIn",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string"
          },
          "party": {
            "title": "Parteiname oder Kürzel",
            "type": "string"
          },
          "isPrevious": {
            "title": "aktuell in der Regierung",
            "type": "boolean"
          },
          "votes": {
            "title": "Anzahl Stimmen",
            "type": "number",
            "Q:options": {
              "step": "0.01",
              "availabilityChecks": [
                {
                  "type": "ToolEndpoint",
                  "config": {
                    "endpoint": "availability/votes",
                    "fields": ["withErrorMargin"]
                  }
                }
              ]
            }
          },
          "errorMargin": {
            "title": "Daten mit Fehlermarge",
            "type": "object",
            "Q:options": {
              "availabilityChecks": [
                {
                  "type": "ToolEndpoint",
                  "config": {
                    "endpoint": "availability/errorMargin",
                    "fields": ["withErrorMargin"]
                  }
                }
              ]
            },
            "properties": {
              "lower": {
                "title": "min. Stimmen",
                "type": "number",
                "Q:options": {
                  "step": "0.01"
                }
              },
              "bestGuess": {
                "title": "Anzahl Stimmen",
                "type": "number",
                "Q:options": {
                  "step": "0.01"
                }
              },
              "upper": {
                "title": "max. Stimmen",
                "type": "number",
                "Q:options": {
                  "step": "0.01"
                }
              }
            }
          },
          "status": {
            "type": "string",
            "title": "Status",
            "default": "undefined",
            "enum": ["undefined", "elected", "not elected"],
            "Q:options": {
              "enum_titles": ["offen", "gewählt", "nicht gewählt"]
            }
          },
          "color": {
            "title": "Parteifarbe",
            "type": "object",
            "Q:options": {
              "compact": true,
              "availabilityChecks": [
                {
                  "type": "UserHasRole",
                  "config": {
                    "role": "expert-election-executive"
                  }
                }
              ]
            },
            "properties": {
              "colorCode": {
                "title": "Farbcode",
                "type": "string",
                "Q:type": "color"
              },
              "classAttribute": {
                "title": "CSS Klassenname",
                "type": "string",
                "Q:options": {
                  "placeholder": "s-viz-color-party-&#46;&#46;&#46;"
                }
              }
            }
          },
          "picture": {
            "type": "object",
            "Q:type": "files",
            "Q:options": {
              "compact": true,
              "availabilityChecks": [
                {
                  "type": "UserHasRole",
                  "config": {
                    "role": "expert-election-executive"
                  }
                }
              ],
              "maxFiles": 1,
              "acceptedFiles": "image/*",
              "fileProperties": {
                "url": "url",
                "key": "key",
                "size": "size",
                "width": "width",
                "height": "height",
                "type": "type"
              }
            }
          }
        },
        "required": ["name"]
      }
    },
    "notes": {
      "title": "Anmerkungen",
      "type": "string"
    },
    "sources": {
      "title": "Quelle(n)",
      "type": "array",
      "items": {
        "type": "object",
        "title": "Quelle",
        "properties": {
          "text": {
            "title": "Quelle",
            "type": "string"
          },
          "link": {
            "Q:type": "link",
            "title": "Link",
            "type": "object",
            "properties": {
              "url": {
                "title": "Link",
                "type": "string",
                "Q:options": {
                  "placeholder": "Direktlink zur Quelle, http://&#46;&#46;&#46;"
                }
              },
              "isValid": {
                "type": "boolean"
              }
            }
          }
        },
        "required": ["text"]
      }
    },
    "options": {
      "title": "Optionen",
      "type": "object",
      "Q:options": {
        "availabilityChecks": [
          {
            "type": "UserHasRole",
            "config": {
              "role": "expert-election-executive"
            }
          }
        ]
      },
      "properties": {
        "hideUpdatedDate": {
          "title": "Aktualisierungsdatum ausblenden",
          "type": "boolean",
          "default": false
        }
      }
    }
  },
  "required": ["title"]
}
